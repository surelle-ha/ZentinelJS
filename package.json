{
	"name": "zentineljs",
	"version": "1.0.0",
	"description": "Zentinel is a backend framework/boilerplate that was developed on top of express.js. This was inspired by Laravel's directory structure.",
	"main": "server.js",
	"scripts": {
		"test": "jest --watch",
		"start:dev": "set SERVER_ENV=development&& nodemon server.js",
		"start:prod": "set SERVER_ENV=production&& nodemon server.js",
		"pm2": "pm2 monit",
		"pm2:dev": "pm2 start pm2.config.js",
		"pm2:prod": "pm2 start pm2.config.js --env production",
		"pm2:restart": "pm2 restart pm2.config.js",
		"pm2:stop": "pm2 stop pm2.config.js",
		"pm2:delete": "pm2 delete pm2.config.js",
		"gem:create:controller": "node config/gem.js controller",
		"gem:create:model": "node config/gem.js model",
		"gem:create:route": "node config/gem.js route",
		"db:up": "npm run db:create && npm run db:migrate",
		"db:reset": "npm run db:drop && npm run db:up && npx sequelize db:seed:all",
		"db:create": "npx sequelize db:create",
		"db:drop": "[[ $NODE_ENV == production ]] && exit 1 || npx sequelize db:drop",
		"db:migrate": "npx sequelize db:migrate",
		"db:rollback": "npx sequelize db:migrate:undo",
		"db:rollback:all": "npx sequelize db:migrate:undo:all"
	},
	"jest": {
		"testEnvironment": "node"
	},
	"author": "Surelle",
	"license": "ISC",
	"dependencies": {
		"@faker-js/faker": "^8.4.1",
		"@sequelize/postgres": "^7.0.0-alpha.41",
		"async": "^3.2.5",
		"axios": "^1.6.8",
		"bcrypt": "^5.1.1",
		"bcryptjs": "^2.4.3",
		"chalk": "^4.1.2",
		"cls-rtracer": "^2.6.3",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"ejs": "^3.1.10",
		"express": "^4.19.2",
		"express-async-errors": "^3.1.1",
		"express-pino-logger": "^7.0.0",
		"express-rate-limit": "^7.3.0",
		"express-response-hooks": "^1.0.4",
		"express-status-monitor": "^1.3.4",
		"express-validation": "^4.1.1",
		"express-validator": "^7.1.0",
		"figlet": "^1.7.0",
		"helmet": "^7.1.0",
		"jest-mock": "^29.7.0",
		"jsonwebtoken": "^9.0.2",
		"mariadb": "^3.3.0",
		"module-alias": "^2.2.3",
		"mongoose": "^8.3.4",
		"multer": "^1.4.5-lts.1",
		"mysql2": "^3.9.7",
		"node-cache": "^5.1.2",
		"node-cron": "^3.0.3",
		"node-mocks-http": "^1.14.1",
		"nodemon": "^3.1.0",
		"pino": "^9.3.1",
		"pino-multi-stream": "^6.0.0",
		"pino-pretty": "^11.2.1",
		"pm2": "^2.9.2-next",
		"sequelize": "^6.37.3",
		"serve-index": "^1.9.1",
		"socket.io": "^4.7.5",
		"sriracha": "^1.0.0",
		"swagger-ui-express": "^5.0.1",
		"uuid": "^10.0.0",
		"ws": "^8.17.0"
	},
	"devDependencies": {
		"babel-plugin-module-resolver": "^5.0.2",
		"jest": "^29.7.0",
		"sequelize-cli": "^6.6.2",
		"supertest": "^7.0.0"
	},
	"_moduleAliases": {
		"@": ".",
		"@root": ".",
		"@app": "./app",
		"@config": "./config",
		"@public": "./public",
		"@storage": "./storage"
	}
}
